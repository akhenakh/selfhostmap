{
	auto_https off
	order pmtiles_proxy before reverse_proxy
}

:8080 {
	root * htdocs
	encode gzip
	# If the client asks for {AREA}.json, serve planet.json internally
	rewrite /{$AREA}.json /planet.json
	file_server
	templates {
		mime application/json
	}
	handle_path /tiles/* {
		pmtiles_proxy {
			bucket {$BUCKET}
			cache_size 256
			public_url {$BASE_MAP_URL}/tiles
		}
	}
}
